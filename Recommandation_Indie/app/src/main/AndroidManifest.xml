<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kookmin.cs.mobile.recommendation_indie" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainPage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
                android:name=".LoginPage"
                android:label="@string/app_name" >
        </activity>

        <activity
                android:name=".RecommendationMusicPage"
                android:label="@string/app_name" >
        </activity>

        <activity
                android:name=".RegisterMusicPage"
                android:label="@string/app_name" >
        </activity>

        <activity
                android:name=".MusicFinder"
                android:label="@string/app_name" >
        </activity>

        <activity
                android:name=".ActivityListTab"
                android:label="@string/app_name" >
        </activity>
        <activity
                android:name=".ConfigurePage"
                android:label="@string/app_name" >
        </activity>
        <activity
                android:name=".CreatedMusicList"
                android:label="@string/app_name" >
        </activity>

    </application>

</manifest>
